<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:background="@color/colorBgLogin"
    android:layout_height="@dimen/size_ac_badge"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgMenuNav"
            android:layout_width="@dimen/size_menu"
            android:layout_height="@dimen/size_menu"
            android:layout_gravity="center"
            android:background="@drawable/ic_menu" />

        <TextView
            android:layout_marginLeft="@dimen/corner_width"
            android:id="@+id/namePlaceTB"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/clock_in_out"
            android:textSize="@dimen/text_size_name_nav" />
    </LinearLayout>
</android.support.v7.widget.Toolbar>
        
