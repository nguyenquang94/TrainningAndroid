<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_custom_ac_badge"
    android:layout_height="@dimen/height_custom_ac_badge"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/vertical_corner_width"
    android:paddingRight="@dimen/vertical_corner_width"
    android:background="@color/colorWhiteSnow"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layouttop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/noti1"
        android:layout_alignStart="@+id/noti1"
        android:layout_marginLeft="@dimen/padding_view_nav_text_2"
        android:layout_marginStart="@dimen/padding_view_nav_text_2">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/bg_custom_ac_badge"
        android:layout_below="@+id/layouttop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/ic_nav">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgEmployee"
            android:layout_marginTop="@dimen/vertical_corner_width"
            android:layout_width="@dimen/size_ac_badge"
            android:layout_height="@dimen/size_ac_badge"
            android:src="@drawable/ic_user"
            app:civ_border_width="@dimen/stroke_width" />

        <TextView
            android:id="@+id/tvEmployeeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_view_nav_text_1"
            android:layout_marginLeft="@dimen/corners_radius"
            android:text="nguyen van quang"
            android:textSize="@dimen/text_size_name_nav" />
    </LinearLayout>

    <TextView
        android:id="@+id/noti1"
        android:layout_width="@dimen/padding_view_nav_text_2"
        android:layout_height="@dimen/padding_view_nav_text_2"
        android:background="@drawable/custom_noti"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/noti2"
        android:layout_toStartOf="@+id/noti2"
        android:layout_marginRight="@dimen/padding_view_nav_img"
        android:layout_marginEnd="@dimen/padding_view_nav_img" />

    <TextView
        android:id="@+id/noti2"
        android:layout_width="@dimen/padding_view_nav_text_2"
        android:layout_height="@dimen/padding_view_nav_text_2"
        android:background="@drawable/custom_noti_2"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/layouttop"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>