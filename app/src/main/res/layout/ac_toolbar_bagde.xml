<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/colorBgLogin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgMenuNavBadge"
            android:layout_width="@dimen/size_menu"
            android:layout_height="@dimen/size_menu"
            android:layout_gravity="center"
            android:background="@drawable/ic_menu" />

        <TextView
            android:layout_marginTop="@dimen/corners_radius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/corner_width"
            android:gravity="center"
            android:text="@string/nav_item_2"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>
</android.support.v7.widget.Toolbar>

